doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title #{htmlWebpackPlugin.options.title}
  body
    .container
      .header
        img(src=require('./images/back-white.svg'), alt="back-route")
        h1 Ciel de Paris
        span Table for 2, Today @ 19:00
      .main
        .calendar
          header
            span.prev
              img(src=require('./images/drop.svg'), alt="", class="rightBtn")
            span.day__month April 2017
            span.next
              img(src=require('./images/drop.svg'), alt="", class="leftBtn")
          div
            each val in ['Mo', 'Th', 'We', 'Th', 'Fr', 'Sa', 'Su']
              span.day-header #{val}
            - var n = 1, oldData = 27;
            while oldData <= 31
              span.day-layer #{oldData++}
            while n <= 30
              span.day-now__month #{n++}
        .openCal
          img(src=require('./images/date.svg'), alt="")
          h2.title Today
          img(src=require('./images/drop.svg'), alt="")
        .box-right
          header
            img(src=require('./images/group.svg'), alt="")
            h2.title Table for
              b 2 guests
            img(src=require('./images/drop.svg'), alt="")
          div
            h2.title DINNER
            div.box
              - var m = 1, s = 10;
              while m <= 9
                span.data 18:0#{m++}
              while s <= 20
                span.data 18:#{s++}
      .footer
        a.btn(href="#") update
        .divider
